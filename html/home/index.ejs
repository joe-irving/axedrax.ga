<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>Axe Drax</title>
    <%- head; %>
  </head>
  <body>
    <nav>
      <div class="icon">

      </div>
      <div id="menu-list-parent">
        <ul class = 'menu' id="menu-list">
          <a class ="burger open" id="burger-open" href="#menu-list">
            <svg width=20px height = 20px viewport="0 0 20 20">
              <g>
                <line x1="2" x2="18" y1="2" y2="2"/>
                <line x1="2" x2="18" y1="10" y2="10"/>
                <line x1="2" x2="18" y1="18" y2="18"/>
              </g>
            </svg>
          </a>
          <a class ="burger close" id="burger-close" href="#menu-list-parent">
            <svg width=20px height = 20px viewport="0 0 20 20">
              <g>
                <line x1="2" x2="18" y1="2" y2="18"/>
                <line x1="2" x2="18" y1="18" y2="2"/>
              </g>
            </svg>
          </a>
        <% for (url in navconfig){ %>
          <%- "<li>" %>
          <% if (typeof navconfig[url] === 'object'){ %>
            <%- `<a href="" onclick="return false;">${navconfig[url].title}</a>` %>
            <%- "<ul class='submenu'>" %>
            <% for (subUrl in navconfig[url].values){ %>
              <%- `<li><a href="${subUrl}">${navconfig[url].values[subUrl]}</a></li>` %>
            <% }; %>
            <%- "</ul>" %>
          <% }else{ %>
            <%- `<a href="${url}">${navconfig[url]}</a>` %>
          <% }; %>
          <%- "</li>" %>
        <% }; %>
        </ul>
      </div>
    </nav>
    <main class="home">
      <%- main; %>
    </main>
    <footer>
      <%- footer; %>
    </footer>
  </body>
</html>
